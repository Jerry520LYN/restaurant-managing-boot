<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.jerry.restaurant.mapper.MenuMapper">
    <select id="getMenuById" parameterType="string" resultType="com.example.jerry.restaurant.pojo.Menu">
        SELECT * FROM menu WHERE dish_id = #{dishId}
    </select>
    <select id="getDishById" parameterType="int" resultType="com.example.jerry.restaurant.pojo.Menu">
        SELECT * FROM menu WHERE dish_id = #{dishId}
    </select>
    <insert id="addMenu" parameterType="com.example.jerry.restaurant.pojo.Menu">
        INSERT INTO menu (dish_id, dish_name, price, description, image_url) VALUES (#{dishId}, #{dishName}, #{price}, #{description}, #{imageUrl})
    </insert>
    <update id="updateMenu" parameterType="com.example.jerry.restaurant.pojo.Menu">
        UPDATE menu SET dish_name=#{dishName}, price=#{price}, description=#{description}, image_url=#{imageUrl} WHERE dish_id=#{dishId}
    </update>
    <delete id="deleteMenu" parameterType="string">
        DELETE FROM menu WHERE dish_id = #{dishId}
    </delete>
    <select id="getAllMenus" resultType="com.example.jerry.restaurant.pojo.Menu">
        SELECT * FROM menu
    </select>
</mapper> 